{
    "name": "online-catalog-backend",
    "version": "0.0.1",
    "description": "",
    "author": "Guilherme Somenzi <somenziguilherme@gmail.com>",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "biome format --write",
        "start": "bun run dist/main.js",
        "start:dev": "bun --watch src/main.ts",
        "start:debug": "bun --inspect --watch src/main.ts",
        "start:prod": "bun run dist/main.js",
        "lint": "biome lint --write",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:cov": "bun test --coverage",
        "typeorm": "typeorm-ts-node-esm -d src/database/data-source.ts",
        "migration:run": "bun src/database/run-migrations.ts",
        "migration:revert": "bun src/database/revert-migration.ts",
        "migration:show": "bun src/database/show-migrations.ts",
        "migration:create": "sh -c 'typeorm migration:create src/database/migrations/$0'",
        "docker:start": "docker-compose up -d",
        "docker:stop": "docker-compose down"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/typeorm": "^11.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "mysql2": "^3.15.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.28"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@types/bun": "^1.3.4",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "globals": "^16.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    }
}
